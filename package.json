{
    "name": "solc-lsp",
    "description": "A library for Solidity LSP functions",
    "author": "Rocky Bernstein",
    "license": "Apache-2.0",
    "version": "1.0.0",
    "repository": {
        "type": "git",
        "url": "https://github.com/rocky/solc-lsp"
    },
    "dependencies": {
        "find-up": "^4.1.0",
        "get-installed-path": "^4.0.8",
        "keccak": "^1.0.2",
        "solc": "^0.5.10",
        "truffle-compile": "^4.1.5",
        "typescript": "^3.5.2"
    },
    "devDependencies": {
        "@types/tape": "^4.2.33",
        "@types/vscode": "^1.36.0",
        "node-gyp": "^5.0.2",
        "nyc": "^14.1.1",
        "tap-spec": "^5.0.0",
        "tape": "^4.11.0",
        "tape-promise": "^4.0.0",
        "ts-node": "^8.3.0"
    },
    "main": "./out/index.js",
    "scripts": {
        "build": "tsc --build",
        "coverage:text": "nyc report --reporter=text",
